<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.details.DetailsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="4dp">

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                tools:layout_height="300dp"
                tools:src="@mipmap/ic_launcher_round"
                android:scaleType="centerCrop"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/text_view_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Original Name"
                android:visibility="visible"
                tools:visibility="visible"
                android:layout_marginHorizontal="8dp"/>

            <TextView
                android:id="@+id/text_view_original_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="visible"
                tools:visibility="visible"
                android:layout_marginHorizontal="8dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/text_view_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Premiere date"
                android:visibility="visible"
                tools:visibility="visible"
                android:layout_marginHorizontal="8dp"/>

            <TextView
                android:id="@+id/text_view_first_launch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="visible"
                tools:visibility="visible"
                android:layout_marginHorizontal="8dp"
                android:textColor="@android:color/black"/>


            <TextView
                android:id="@+id/text_view_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Overview"
                android:visibility="visible"
                tools:visibility="visible"
                android:layout_marginHorizontal="8dp"/>

            <TextView
                android:id="@+id/text_view_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="visible"
                tools:visibility="visible"
                android:layout_marginHorizontal="8dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/text_view_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Popularity"
                android:visibility="visible"
                tools:visibility="visible"
                android:layout_marginHorizontal="8dp"/>

            <TextView
                android:id="@+id/text_view_popularity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="visible"
                tools:visibility="visible"
                android:layout_marginHorizontal="8dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/text_view_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Votes average"
                android:visibility="visible"
                tools:visibility="visible"
                android:layout_marginHorizontal="8dp"/>

            <TextView
                android:id="@+id/text_view_votes_average"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="visible"
                tools:visibility="visible"
                android:layout_marginHorizontal="8dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/text_view_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Votes count"
                android:visibility="visible"
                tools:visibility="visible"
                android:layout_marginHorizontal="8dp"/>

            <TextView
                android:id="@+id/text_view_votes_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="visible"
                tools:visibility="visible"
                android:layout_marginHorizontal="8dp"
                android:textColor="@android:color/black"/>


        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

</FrameLayout>